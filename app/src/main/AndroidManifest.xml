<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dupo.dupo" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".Startsite" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Connection"
            android:label="@string/title_activity_connection" >
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".MultiPayerGame"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_multi_payer_game"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".SinglePlayerGame"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_single_player_game"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".Invention"
            android:label="@string/title_activity_invention" >
        </activity>
    </application>

</manifest>
